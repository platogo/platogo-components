ting",				"difficultyRating", "favorLevel", "shareLevel", "close" ] );		}	// ============================================================================================				override protected function initialize() : void		{			// set defaults			skin.levelImage.imageSize = ImageSize.MEDIUM;			skin.favorLevel.visible = PlatogoAPI.currentUser.loggedIn;			// add listeners			skin.favorLevel.addEventListener( MouseEvent.CLICK, favorLevelClickListener, false, 0, true );			skin.shareLevel.addEventListener( MouseEvent.CLICK, shareLevelClickListener, false, 0, true );			skin.close.addEventListener( MouseEvent.CLICK, closeClickListener, false, 0, true );		}				override protected function cleanup() : void		{			// remove listeners			skin.favorLevel.removeEventListener( MouseEvent.CLICK, favorLevelClickListener );			skin.shareLevel.removeEventListener( MouseEvent.CLICK, shareLevelClickListener );			skin.close.removeEventListener( MouseEvent.CLICK, closeClickListener );		}				override protected function draw() : void		{			if ( _level )			{				skin.levelName.text = _level.name;				skin.levelImage.level = _level;				skin.qualityRating.level = _level;				skin.difficultyRating.level = _level;								skin.favorLevel.selected = _level.currentUserFavorite;			}		}			// ============================================================================================		protected function favorLevelClickListener( event : MouseEvent ) : void		{			if ( _level )			{				if ( skin.favorLevel.selected )				{					PlatogoAPI.levelService.favorLevel( _level );				}				else				{					PlatogoAPI.levelService.unfavorLevel( _level );				}			}		}				protected function shareLevelClickListener( event : MouseEvent ) : void		{			_shareLevelDialog = new ShareLevelDialog();			_shareLevelDialog.level = _level;			_shareLevelDialog.addEventListener( Event.CLOSE, shareLevelDialogCloseListener, false, 0, true );						_shareLevelDialog.y -= ( _shareLevelDialog.height - skin.height ) >> 1;			addChild( _shareLevelDialog );			skin.visible = false;		}				protected function shareLevelDialogCloseListener( event : Event ) : void		{			_shareLevelDialog.removeEventListener( Event.CLOSE, shareLevelDialogCloseListener );			removeChild( _shareLevelDialog );			_shareLevelDialog = null;						skin.visible = true;		}		protected function closeClickListener( event : MouseEvent ) : void		{			dispatchEvent( new Event( Event.CLOSE ) );		}			// ============================================================================================			public function get level() : Level		{			return _level;		}		public function set level( value : Level ) : void		{			_level = value;			invalidate();		}	}}