private var _level : Level;	// ============================================================================================			public function LevelImage()		{			_levelImageLoader = new Loader();			imagePlaceholder.addChild( _levelImageLoader );			_levelImageLoader.contentLoaderInfo.addEventListener( IOErrorEvent.IO_ERROR, ioErrorListener, false, 0, true );						// set defaults			imageSize = ImageSize.SMALL;		}				public function dispose() : void		{			_levelImageLoader.contentLoaderInfo.removeEventListener( IOErrorEvent.IO_ERROR, ioErrorListener );						imagePlaceholder.removeChild( _levelImageLoader );			stopLoader();			_levelImageLoader = null;		}				protected function loadImage() : void		{			switch ( _imageSize )			{				case ImageSize.SMALL: gotoAndStop( "SMALL" ); break;				case ImageSize.MEDIUM: gotoAndStop( "MEDIUM" ); break;				case ImageSize.LARGE: gotoAndStop( "LARGE" ); break;			}						stopLoader();						if ( _level != null )			{				currentUserFavorite.visible = _level.currentUserFavorite;				_levelImageLoader.load( new URLRequest( _level.getImageURL( _imageSize ) ) );			}			else			{				currentUserFavorite.visible = false;			}		}				protected function stopLoader() : void		{			// I'm not too happy with this solution but listening for the opening of streams			// and the completion of the loading process didn't yield reliable results.			try { _levelImageLoader.close(); }            catch( error : Error ) { }            finally { _levelImageLoader.unload(); }		}			// ============================================================================================		        private function ioErrorListener( event : IOErrorEvent ) : void		{			// an error occured - so what?		}	// ============================================================================================			public function get level() : Level		{			return _level;		}		public function set level( value : Level ) : void		{			_level = value;						loadImage();		}				public function get imageSize() : ImageSize		{			return _imageSize;		}		public function set imageSize( value : ImageSize ) : void		{			_imageSize = value;						loadImage();		}	}}