c var difficultyRating : DifficultyRating;	// ============================================================================================		private var _dynamicText : Dictionary;		private var _level : Level;	// ============================================================================================			public function LevelEntry() : void		{			_dynamicText = new Dictionary( true );			_dynamicText[ lastModified ] = lastModified.text;			_dynamicText[ timesPlayed ] = timesPlayed.text;						qualityRating.enabled = qualityRating.showSubtitle = false;			difficultyRating.showSubtitle = difficultyRating.enabled = false;		}				override public function dispose() : void		{			super.dispose();						levelImage.dispose();			levelImage = null;						_dynamicText = null;		}	// ============================================================================================			public function get level() : Level		{			return _level;		}		public function set level( value : Level ) : void		{			_level = value;					levelImage.level = _level;			levelName.text = _level.name;			userName.text = _level.creator.name;						lastModified.text = sprintf( _dynamicText[ lastModified ], TextFormatter.formatDate( _level.lastModified ) );			timesPlayed.text = sprintf( _dynamicText[ timesPlayed ], TextFormatter.formatNumber( _level.timesPlayed ) );						qualityRating.level = _level;			difficultyRating.level = _level;		}	}}