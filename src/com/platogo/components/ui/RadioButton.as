package com.platogo.components.ui{	import flash.display.MovieClip;	import flash.events.MouseEvent;		/**	 * This class implements very simple radio button behaviour.	 * 	 * <p>Selected state means that this is the currently selected radio button - no mouse clicks are	 * propagated in this state. A not-selected state usually has rollover behaviour and propagates	 * mouse click events.</p>	 * 	 * <p>The class using radio buttons must implement radio button group behaviour 	 * or use the RadioButtonGroup class.</p>	 */	public class RadioButton extends MovieClip	{	// ============================================================================================				private static const NOT_SELECTED_FRAME : uint = 1;		private static const SELECTED_FRAME : uint = 2;	// ============================================================================================			/**		 * 		 */		public function RadioButton()		{			addEventListener( MouseEvent.CLICK, clickListener, false, 0, true );			selected = false;		}			// ============================================================================================			/**		 * Makes sure click events are only propagated when radiobutton is not active.		 */		private function clickListener( event : MouseEvent ) : void		{			if ( selected )			{				event.stopImmediatePropagation();			}			else			{				selected = true;			}		}		// ============================================================================================			/**		 * 		 */		public function get selected() : Boolean		{			return !buttonMode;		}		public function set selected( value : Boolean ) : void		{			buttonMode = !value;			gotoAndStop( value ? RadioButton.SELECTED_FRAME : RadioButton.NOT_SELECTED_FRAME );		}	}}