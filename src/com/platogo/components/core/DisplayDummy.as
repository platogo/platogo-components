		_instance = new DisplayDummy( new SingletonEnforcer() );			}								return _instance;		}			// ============================================================================================				public static function substituteMissingChildren( displayObjectContainer : DisplayObjectContainer, children : Array ) : void		{			for ( var i:int=0; i<children.length; ++i )			{				var hierarchy : Array = ( children[ i ] as String ).split( "." );				var parent : * = displayObjectContainer;								for ( var j:int=0; j<hierarchy.length; ++j )				{					if ( parent[ hierarchy[ j ] ] == undefined )					{						parent[ hierarchy[ j ] ] = DisplayDummy.getInstance();					}										parent = parent[ hierarchy[ j ] ];				}			}		}		// ============================================================================================				/**		 * 		 */		override flash_proxy function callProperty( methodName: * , ... args ) : *		{	    	return DisplayDummy.getInstance();		}				/**		 * 		 */		override flash_proxy function getProperty( name : * ) : *		{	        return DisplayDummy.getInstance();	    }			/**		 * 		 */	    override flash_proxy function setProperty( name : *, value : * ) : void	    {	    	// do nothing - that's the point	    }	}}internal class SingletonEnforcer {}