copyURL", "shareFacebook", "shareMyspace",				"shareDigg", "shareTwitter", "shareStumbleUpon", "shareReddit", "close" ] );		}	// ============================================================================================				override protected function initialize() : void		{			// add listeners			skin.copyURL.addEventListener( MouseEvent.CLICK, copyURLClickListener, false, 0, true );			skin.close.addEventListener( MouseEvent.CLICK, closeClickListener, false, 0, true );						skin.shareFacebook.addEventListener( MouseEvent.CLICK, shareClickListener, false, 0, true );			skin.shareMyspace.addEventListener( MouseEvent.CLICK, shareClickListener, false, 0, true );			skin.shareDigg.addEventListener( MouseEvent.CLICK, shareClickListener, false, 0, true );			skin.shareTwitter.addEventListener( MouseEvent.CLICK, shareClickListener, false, 0, true );			skin.shareStumbleUpon.addEventListener( MouseEvent.CLICK, shareClickListener, false, 0, true );			skin.shareReddit.addEventListener( MouseEvent.CLICK, shareClickListener, false, 0, true );		}		override protected function cleanup() : void		{			// remove listeners			skin.copyURL.removeEventListener( MouseEvent.CLICK, copyURLClickListener );			skin.close.removeEventListener( MouseEvent.CLICK, closeClickListener );			skin.shareFacebook.removeEventListener( MouseEvent.CLICK, shareClickListener );			skin.shareMyspace.removeEventListener( MouseEvent.CLICK, shareClickListener );			skin.shareDigg.removeEventListener( MouseEvent.CLICK, shareClickListener );			skin.shareTwitter.removeEventListener( MouseEvent.CLICK, shareClickListener );			skin.shareStumbleUpon.removeEventListener( MouseEvent.CLICK, shareClickListener );			skin.shareReddit.removeEventListener( MouseEvent.CLICK, shareClickListener );		}				override protected function draw() : void		{			if ( _level )			{				skin.shareURL.text = _level.shareURL;			}		}			// ============================================================================================		protected function copyURLClickListener( event : MouseEvent ) : void		{			if ( _level )			{				System.setClipboard( _level.shareURL );			}		}		protected function shareClickListener( event : Event ) : void		{			if ( _level )			{				var urlRequest : URLRequest = new URLRequest();				urlRequest.data = new URLVariables( );								var title : String = "Play level "+ _level.name +"in game " + PlatogoAPI.gameInformation.name + " on Platogo";								switch ( event.target )				{					case skin.shareFacebook:						urlRequest.url = "http://www.facebook.com/share.php";						urlRequest.data.u = _level.shareURL;						break;						case skin.shareMyspace:						urlRequest.url = "http://www.myspace.com/index.cfm";						urlRequest.data.fuseaction = "postto";						urlRequest.data.t = title;						urlRequest.data.c = "";						urlRequest.data.u = _level.shareURL; 						urlRequest.data.l = "1"; 						break;						case skin.shareDigg:						urlRequest.url = "http://digg.com/submit";						urlRequest.data.phase = "2";						urlRequest.data.url = _level.shareURL;						urlRequest.data.title = title;						urlRequest.data.bodytext = "Check out this cool level on Platogo";						urlRequest.data.topic = "playable_web_games";						break;						case skin.shareTwitter:						urlRequest.url = "http://twitter.com/home";						urlRequest.data.status = "Check out this cool level "+ _level.shareURL;						break;						case skin.shareStumbleUpon:						urlRequest.url = "http://www.stumbleupon.com/submit";						urlRequest.data.url = _level.shareURL;						urlRequest.data.title = title;						break;						case skin.shareReddit:						urlRequest.url = "http://www.reddit.com/submit";						urlRequest.data.url = _level.shareURL;						urlRequest.data.title = title;						break;				}								navigateToURL( urlRequest, "_blank" );			}		}				protected function closeClickListener( event : Event ) : void		{			dispatchEvent( new Event( Event.CLOSE ) );		}			// ============================================================================================			public function get level() : Level		{			return _level;		}		public function set level( value : Level ) : void		{			_level = value;			invalidate();		}	}}